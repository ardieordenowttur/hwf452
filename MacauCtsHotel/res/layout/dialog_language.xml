<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg01"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_parent_left_right"
        android:paddingRight="@dimen/margin_parent_left_right"
        android:text="@string/choice_language"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/app_default_big_text_size" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/languageRdo" >

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg01"
            android:button="@null"
            android:drawableRight="@drawable/order_comment_radio_button_selected"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_parent_left_right"
            android:paddingRight="@dimen/margin_parent_left_right"
            android:text="@string/default_language"
            android:textColor="@color/default_text_color"
            android:id="@+id/defaultRdo" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg01"
            android:button="@null"
            android:drawableRight="@drawable/order_comment_radio_button_selected"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_parent_left_right"
            android:paddingRight="@dimen/margin_parent_left_right"
            android:text="@string/rCN"
            android:textColor="@color/default_text_color" 
            android:id="@+id/rcnRdo"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg01"
            android:button="@null"
            android:drawableRight="@drawable/order_comment_radio_button_selected"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_parent_left_right"
            android:paddingRight="@dimen/margin_parent_left_right"
            android:text="@string/rHK"
            android:textColor="@color/default_text_color"
            android:id="@+id/rhkRdo" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg01"
            android:button="@null"
            android:drawableRight="@drawable/order_comment_radio_button_selected"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_parent_left_right"
            android:paddingRight="@dimen/margin_parent_left_right"
            android:text="@string/en"
            android:textColor="@color/default_text_color" 
            android:id="@+id/enRdo"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_13"
            android:text="@string/cancel"
            android:textColor="@color/default_text_color" />

        <Button
            android:id="@+id/OK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_13"
            android:text="@string/OK"
            android:textColor="@color/default_text_color" />
    </LinearLayout>

</LinearLayout>