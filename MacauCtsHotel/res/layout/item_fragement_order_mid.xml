<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_items_minheight2"
    android:minHeight="@dimen/listview_items_minheight2" >

    <View
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <RelativeLayout
        android:id="@+id/itemsOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_parent_left_right"
        android:layout_marginRight="@dimen/margin_parent_left_right"
        android:background="@drawable/list_column10_2_background" >

        <TextView
            android:id="@+id/orderListViewItemsButton"
            style="@style/orderListViewItemsButtonStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_parent_left_right"
            android:layout_toLeftOf="@id/orderListViewItemsButton"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/orderNumberTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top|left"
                android:text="@string/order_number"
                android:textColor="@color/default_text_color"
                android:textSize="@dimen/app_default_text_size" />

            <TextView
                android:id="@+id/hotelNameTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="@color/light_text_color"
                android:textSize="@dimen/app_default_text_size" />

            <TextView
                android:id="@+id/orderDateTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|left"
                android:textColor="@color/light_text_color"
                android:textSize="@dimen/app_small_textsize" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>